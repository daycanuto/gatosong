<Window x:Class="Ong.Views.frmCadastroAdocao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ong.Views"
        mc:Ignorable="d"
        Title="Cadastro Adoção" Height="125" Width="300">
    <Grid Height="85" VerticalAlignment="Top">
        <Label x:Name="nomeAdotante" Content="Adotante: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="nomeGato" Content="Gato: " HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.079,2.115" Margin="10,41,0,0"/>
        <Button x:Name="bntGravar" Content="Gravar" HorizontalAlignment="Left" Margin="207,19,0,0" VerticalAlignment="Top" Width="75" Height="41" RenderTransformOrigin="0.467,1.049" Click="bntGravar_Click"/>
        <ComboBox x:Name="cbxGato" HorizontalAlignment="Left" Margin="56,45,0,0" VerticalAlignment="Top" Width="139"/>
        <ComboBox x:Name="cbxAdotante" HorizontalAlignment="Left" Margin="75,14,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
